# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/edu-ott-db
# OR for PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/edu_ott_db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRE=30d

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Cloudinary (for file storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@edu-ott.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.io
SOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# Redis (for session/cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Client URLs
WEB_URL=http://localhost:3000
MOBILE_URL=http://localhost:19006

# AI Chatbot (Optional - for future integration)
OPENAI_API_KEY=your-openai-api-key
CHATBOT_MODEL=gpt-3.5-turbo
